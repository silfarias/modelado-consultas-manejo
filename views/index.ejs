    <form action="/api/books/newBook" id="newBook" class="rounded border p-3 form-control" method="POST" enctype="multipart/form-data">
        <h1 class="mb-3 text-center bg-warning text-light rounded p-2">Adds a New Book</h1>
        <div class="container">
            <div class="row">
                <div class="col-6 mb-3">
                    <label for="title">Title of the Book</label>
                    <input type="text" name="title" placeholder="Title">
                </div>  

                <div class="col-6 mb-3">
                    <label for="yearPublication">Year of Publication</label>
                    <input type="text" name="yearPublication" placeholder="Year Publication">
                </div>

                <div class="col-6 mb-3">
                    <label for="genreId">Genre"></label>
                    <select name="genreId">
                        <option value="">Select Genre</option>
                        <option value="6520b9bab7c05aac0d42915e">Novela</option>
                        <option value="6520ba43b7c05aac0d429160">Policial</option>
                        <option value="6520ba5fb7c05aac0d429162">Dramatico</option>
                    </select>
                </div>

                <div class="col-6 mb-3">
                    <label for="formFile" class="form-label">Cover Page</label>
                    <input class="form-control" name="coverPage" type="file" id="Cover Page">
                </div>
                
                <div class="col-6 mb-3">
                    <label for="authorId">Author</label>
                    <select name="authorId">
                        <option value="">Select Author</option>
                        <option value="6521c8ecfc6e20670994439d">Julio Verne</option>
                    </select>
                </div>
        
                <div>
                    <button type="submit" class="btn btn-warning">Submit</button>     
                </div>
            </div>
        </div>
    </form>


    
